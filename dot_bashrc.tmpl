{{- /* Read the content of /etc/skel/.bashrc and filter out commented lines */ -}}
{{- $bashrc_content := "" -}}
{{- with file "/etc/skel/.bashrc" -}}
{{-   $bashrc_content = (. | splitLines | reject "match" "^\\s*#") -}}
{{- end -}}

# Generated by Chezmoi from /etc/skel/.bashrc (if readable)
{{- range $bashrc_content -}}
{{- . -}}
{{ end -}}

# Load .shell_aliases if it exists
if [ -f "$HOME/.shell_aliases" ]; then
    . "$HOME/.shell_aliases"
fi

# Load .shellrc if it exists
if [ -f "$HOME/.shellrc" ]; then
    . "$HOME/.shellrc"
fi
